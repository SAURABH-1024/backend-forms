<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <style>
  * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
          }
        
          input {
            display:
              block;
            padding: 15px 200px 20px 200px;
            margin: 10px 150px 20px 250px;
            font-size: 20px;
            font-weight: 800;
            border: 1px solid rgb(48, 46, 46);
            outline: none;
          }
        
          ::placeholder {
            color: rgb(0, 0, 0);
            text-align:
              left;
          }
        
          .MainForm {
            display: flex;
            justify-content: center;
          }
        
          .firstname {
            margin-top: 100px;
          }
        
          .submit-btn {
            padding: 10px 80px 15px 80px;
            color: rgb(255, 255, 255);
            font-size: 20px;
            font-weight:
              800;
            border: none;
            margin-left: 225px;
            margin-top: 20px;
            background-color: rgb(69, 99, 231);
          }
        
          .navbar {
            float: right;
            margin-bottom: 30px;
          }
        
          .login-btn {
            text-decoration: none;
            color:
              black;
            font-size: 30px;
            margin-right: 15px;
          }
        
          .signup-btn {
            text-decoration: none;
            color: black;
            font-size: 30px;
          }
  </style>
</head>
 <body>
        <h1>Already a user? <a href="/login">Login </a> </h1>

        <form action="/register" method="POST">

          <input
            type="text"
            name="firstname"
            placeholder="Enter ur firstname"
          />

          <input type="text" name="lastname" placeholder="Enter ur lastname" />
          
          <input type="email" name="email" placeholder="Enter ur email" />
          
          <input type="number" name="number" placeholder="Enter ur number" />

          <input type="password" name="password" placeholder="Enter ur password" />
          
          <input type="password" name="confirmpassword" placeholder=" confirm your password" />

          <input class="submit-btn" type="submit" value="Register" />
          {{! pattern="[a-z0-9]+@[a-z0-9.-]+\.[a-z]{2,4}$" }}
        </form>
      </body>

    </html>
  </body>


</html>






